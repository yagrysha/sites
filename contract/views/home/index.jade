extends ../layouts/layout

block content
    div(class="page-header")
        h3 Интерфейс клиентов

    - if (projects.length)
        table(class="table table-hover")
            thead
                tr
                    th id
                    th Название
                    th Статуc
                    th Текущая операция
                    th(width="220px")
            tbody
                - projects.forEach(function(project){
                    tr
                        td #{project.id}
                        td #{project.name}
                        td not programming
                        td not programming
                        td
                            div(class="btn-group")
                                a(class="btn btn-primary", href="/home/attach_file/#{project.id}") Прикрепить документ

                - })